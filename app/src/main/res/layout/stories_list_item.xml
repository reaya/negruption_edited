<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="354dp"
        android:layout_height="178dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="19dp"

            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="5dp"
            android:textSize="17dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="Story Title" />

        <TextView
            android:id="@+id/textViewStoryDesc"
            android:layout_marginTop="77dp"
            android:layout_marginLeft="12dp"
            android:lineSpacingExtra="2.5dp"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="18dp"
            android:textColor="@color/gray"
            android:text="Story Description" />

        <TextView
            android:id="@+id/textViewViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vs"
            android:layout_marginLeft="314dp"
            android:layout_marginTop="6dp"
            />
        <ImageView
            android:id="@+id/imageViewEye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/view"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/textViewReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...Read More"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="155dp"
            />


    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>